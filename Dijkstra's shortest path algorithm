#include<bits/stdc++.h>
using namespace std;
 
#define boost ios_base::sync_with_stdio(false);cin.tie(NULL)
#define endl "\n"
#define ll long long int
#define mod 1000000007
#define vll vector<ll>
#define vvll vector<vll>
#define pb push_back
#define mll map<ll,ll>
#define pll pair<ll,ll>
#define N 1000005

int main()
{
    boost;
    ll t,n,i,x,y,j,k,m,mn,mx,cnt,sum,ans;
    cin>>t;
    while(t--)
    {
        sum=0;cnt=0;ans=0;mn=1e18;mx=INT_MIN;
        cin>>n>>m;
        vector<vector<pll>> a(n+1);vll dp(n+1,1e9);
        for(i=0;i<m;i++) 
        {
            ll u,v,w;
            cin>>u>>v>>w;
            a[u].pb({v,w});a[v].pb({u,w});
        }
        priority_queue<pll,vector<pll>,greater<pll>> pq;
        dp[1]=0;
        pq.push({0,1});
        while(!pq.empty())
        {
            x=pq.top().second;
            pq.pop();
            for(auto it:a[x])
            {
                if(dp[x]+it.second<dp[it.first])
                {
                    dp[it.first]=dp[x]+it.second;
                    pq.push({dp[it.first],it.first});
                }
            }
        }
        for(i=1;i<=n;i++) 
            cout<<dp[i]<<' ';
        cout<<endl;
    }
}
